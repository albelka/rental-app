{{yield}}
<li>
  {{rental.owner}}'s {{rental.type}} {{rental.city}}
  {{#if isImageShowing}}
    <p><img {{action 'imageHide'}} src={{rental.image}} alt={{rental.type}}></p>
  {{else}}
    <button class="btn btn-info" {{action 'imageShow'}}>Show image</button>
  {{/if}}
  <button class="btn btn-info" {{action 'delete' rental}}>Delete Rental</button>
</li>
